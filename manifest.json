{
  "manifest_version": 2,
  "name": "Bet Freezer",
  "version": "1.0",
  "description": "Автоматизация заморозки ставок на букмекерской конторе",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/", "https://*/"],
      "js": ["content.js"]
    }
  ]
}
