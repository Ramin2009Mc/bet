{
  "manifest_version": 3,
  "name": "Bet Freezer",
  "version": "1.1",
  "description": "Автоматизация заморозки ставок на букмекерской конторе",
  "permissions": [
    "tabs",
    "*://*.bettingsite.com/*",
    "activeTab",
    "cookies"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.bettingsite.com/*"],
      "js": ["content.js"]
    }
  ]
}